/* */
* {
  box-sizing: border-box;
}
.posts {
  display: grid;
  grid-template-columns: repeat(2, 40vw);
  gap: 1.5vw;
  place-content: center;
}
.post {
  padding: 1vw;
  border-left: 10px solid purple;
  box-shadow: rgba(0, 0, 0, 0.24) 0 3px 8px;
}
.post__title {
  font-size: 1.5vw;
  font-weight: 600;
  text-transform: uppercase;
  margin-bottom: 0.5vw;
}