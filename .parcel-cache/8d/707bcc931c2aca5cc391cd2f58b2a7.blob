/* */
* {
  box-sizing: border-box;
}

.posts {
  display: grid;
  grid-template-columns: repeat(2, 300px);
  gap: 20px;
}

.post__title {
  font-size: 2vw;
  font-weight: 600;
  text-transform: uppercase;
}